<div class="row">
    <%= attachment_image_tag @user, :profile_image, size:70, format: "jpeg", fallback: "no_image.jpg",size:50 ,class: "user_image mt-4" %>
    <h1 class="col-lg-8 mt-4"><%=@user.name%>さんのページ</h1>

    <h2 class="col-lg-8 mt-3 mb-4">ユーザー情報編集</h2>
    <table class="col-lg-7 mx-auto">
        <tbody>
            <tr>
                <th>ユーザーネーム</th>
                <td><%= @user.name %></td>
            </tr>
            <tr>
                <th>自己紹介</th>
                <td><%= @user.introduction %></td>
            </tr>
            <tr>
                <th>電話番号</th>
                <td><%= @user.phone_number %></td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td><%= @user.email %></td>
            </tr>
        </tbody>
    </table>
    <p><%= link_to "ユーザーを削除する",admin_user_path(@user.id),method: :delete,"data-confirm" => "#{@user.name}さんを削除しますか？",class: "btn btn-danger mt-3" %></p>
    <!-- 投稿一覧 -->
    <div class="col-lg-10 mx-auto">
        <%= render "admin/posts/post",posts: @user.posts %>
    </div>
</div>