<div class="user-infomation">
    <h1><%=@user.name%>さんのページ</h1>
    <%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg",size:100 ,class: "user_image" %>

    <h1>ユーザー情報編集</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>ユーザーネーム</th>
                <td><%= @user.name %></td>
            </tr>
            <tr>
                <th>自己紹介</th>
                <td><%= @user.introduction %></td>
            </tr>
            <tr>
                <th>電話番号</th>
                <td><%= @user.phone_number %></td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td><%= @user.email %></td>
            </tr>
        </tbody>
    </table>
    <%= link_to "ユーザーを削除する",admin_user_path(@user.id),method: :delete,class: "btn btn-danger mt-3 mb-3" %>
</div>
  <!-- 投稿一覧 -->
<div class="post-index">
    <div class="post-index">
        <%= render "admin/posts/post",posts: @user.posts %>
    </div>
</div>