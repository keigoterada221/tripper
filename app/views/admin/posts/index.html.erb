<h1 class="mt-5 mb-3 w-50 mx-auto text-center">投稿一覧</h1>
<div class="">
	<div class="sort-search" >
		<%= form_with url:"/admin/posts",method: :get,local: true do |f| %>
			<%= f.select :sort_select,[["新着順","新着順"],["いいね数順","いいね数順"],["コメント数順","コメント数順"]], {include_blank: '並び替え'} %>
			<%= f.text_field :word_search, placeholder: "検索ワード入力" %>
			<%= f.submit "検索する" %>
		<% end %>
	</div>
	<!-- 投稿一覧 -->
	<%= render "admin/posts/post",posts: @posts %>
	<%= paginate @posts,class: "paginate" %>
</div>