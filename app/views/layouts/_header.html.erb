<!-- ヘッダー -->
<header class="sticky-top">
    <div class="navbar">
        <!-- 管理者 -->
        <% if admin_signed_in? %>
            <h2 class="ml-5 mt-4">管理者</h2>
            <%= link_to "退出",destroy_admin_session_path,method: :delete,class: "btn btn-danger" %>
        <!-- ログインユーザー -->
        <% elsif user_signed_in? %>
            <%= link_to user_path(current_user.id) do %>
                <%= attachment_image_tag current_user, :profile_image, size: 70, format: "jpeg", fallback: "no_image.jpg",size:70 ,class: "user_image ml-5 mt-2" %>
            <% end %>
            <h1><%= link_to "Tripper", root_path %></h1>
            <li class="nav-item dropdown">
                <a class="btn btn-secondary dropdown-toggle"  data-toggle="dropdown" style="margin-right: 50px;" aria-expanded="false">メニュー</a>
                <div class="dropdown-menu">
                    <%= link_to "ログアウト",destroy_user_session_path,method: :delete, class: "dropdown-item" %>
                    <%= link_to "アバウト",about_path, class: "dropdown-item" %>
                    <%= link_to "マイページ",user_path(current_user.id), class: "dropdown-item" %>
                    <%= link_to "ユーザーを探す",user_search_path, class: "dropdown-item" %>
                    <%= link_to "トップへ",root_path, class: "dropdown-item" %>
                </div>
            </li>
        <% else %>
            <div>
                <h2>ようこそゲストユーザー様</h2>
                <%= link_to new_user_session_path do %>
                    <i class="fas fa-sign-in-alt"></i>
                    <span>ログインして旅先を動画でシェアしよう!!</span>
                <% end %>
            </div>
                <h1 class="w-25"><%= link_to "Tripper", root_path %></h1>
            <li class="nav-item dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" data-toggle="dropdown" style="margin-right: 50px;">メニュー</a>
                <div class="dropdown-menu">
                    <%= link_to "ログイン",new_user_session_path, class: "dropdown-item" %>
                    <%= link_to "新規登録",new_user_registration_path, class: "dropdown-item" %>
                    <%= link_to "Tripperについて",about_path, class: "dropdown-item" %>
                    <%= link_to "トップへ",root_path, class: "dropdown-item" %>
                </div>
            </li>
        <% end %>
    </div>
</header>