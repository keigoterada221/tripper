<div class="row">
    <%= attachment_image_tag user, :profile_image, :size 100, format: "jpeg", fallback: "no_image.jpg",size:100 ,class: "user_image" %>
  <!-- 名前/フォロー・フォロワー数とボタン/自己紹介文/ -->
    <div id="relationship-<%= user.id %>" class="row pt-5 pl-5 w-75">
        <%= render "user/relationships/relationship",user: user %>
    </div>
</div>
<div class="mt-3">
    <h3>自己紹介</h3>
    <p><%= simple_format(user.introduction) %></p>
</div>
<!-- 投稿一覧 -->
<div id="post_lists-2"><%= render "user/posts/post2",posts: posts %></div>
<div class="more">
	<%= link_to_next_page posts, 'さらに読み込む', remote: true, id: 'view_more',class: "btn btn-outline-light w-100 mt-3 mb-3" %>
</div>