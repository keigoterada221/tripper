<% if @user.id == current_user.id %>
    <h1>マイページ</h1>
    <div class="row">
        <%= attachment_image_tag current_user, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg",size:100 ,class: "current_user_image" %>
      <!-- 名前/フォロー・フォロワー数/自己紹介文/編集ボタン -->
        <div id="relationship-<%= current_user.id %>" class="row pt-5 pl-5">
            <%= render "user/relationships/relationship",user: current_user %>
        </div>
    </div>
    <div class="mt-3">
        <h3>自己紹介</h3>
        <p><%= current_user.introduction %></p>
    </div>
    <%= link_to "ユーザー情報編集",edit_user_path(current_user.id),class: "btn btn-outline-secondary mt-3 mb-3" %>
  <!-- 投稿一覧 -->
    <%= render "user/posts/post2",posts: @posts %>

<% else %>

    <h1><%=@user.name%>さんのページ</h1>
    <div class="row">
        <%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg",size:100 ,class: "user_image" %>
      <!-- 名前/フォロー・フォロワー数とボタン/自己紹介文/ -->
        <div id="relationship-<%= @user.id %>" class="row pt-5 pl-5">
            <%= render "user/relationships/relationship",user: @user %>
        </div>
    </div>
    <div class="mt-3">
        <h3>自己紹介</h3>
        <p><%= @user.introduction %></p>
    </div>
  <!-- 投稿一覧 -->
    <%= render "user/posts/post2", posts: @user.posts %>
<% end %>