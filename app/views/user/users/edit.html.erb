<div class="row">
    <div class="col-lg-8 mx-auto text-center">
        <h1 class="pt-5 mb-5">ユーザー情報編集画面</h1>
        <%= form_with model: @user,url:user_path(current_user.id),method: :patch, local: true do |f| %>

            <div class="field">
                <%= f.label :name,"プロフィール画像" %><br>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg",size:100,class: "user_image" %>
                <%= f.attachment_field :profile_image %>
            </div>

            <div class="form-group pt-4 w-50 mx-auto">
                <%= f.label :name,"ユーザー名" %><br>
                <%= f.text_field :name, autofocus: true,class: "form-control" %>
            </div>

            <div class="form-group pt-4 w-50 mx-auto">
                <%= f.label :introduction,"自己紹介文" %><br>
                <%= f.text_area :introduction, autofocus: true,class: "form-control" %>
            </div>

            <div class="form-group pt-4 w-50 mx-auto">
                <%= f.label :phone_number,"電話番号" %><br>
                <%= f.text_field :phone_number, autofocus: true,class: "form-control" %>
            </div>

            <div class="form-group pt-4 w-50 mx-auto">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true,class: "form-control", autocomplete: "email" %>
            </div>

            <div class="actions"><%= f.submit "登録情報を更新する",class: "btn btn-outline-success mt-3 w-25" %></div>
        <% end %>

        <div><%= link_to "退会画面へ",user_withdraw_path(@user.id),class: "btn btn-outline-danger mt-3 w-25" %></div>
    </div>
</div>