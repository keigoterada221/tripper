<div class="pl-3">
	<!-- 投稿日時 -->
	<p class="float-right"><%= post.created_at.strftime("%Y/%m/%d") %>の投稿<p>
	<!-- いいね機能 -->
	<span id="favorite-<%= post.id %>" class="">
	    <%= render "user/favorites/favorite",post: post %>
	</span>
	<!-- コメント数 -->
	<span class="">
	    <%= render "user/comments/count",post: post %>
	</span>
	<p><%= link_to post.title,post_path(post.id),style: "font-size: 1.2rem;" %></p>
	<!-- 投稿に紐づく都道府県名 -->
	<span><%= link_to post.prefecture.name,prefecture_path(prefecture_code: post.prefecture.id),class: "btn btn-secondary mb-2",style: "height: 30px; padding-top: 3px;" %>
	</span>
	<% if user_signed_in? && post.user_id == current_user.id%>
		<%= link_to "投稿を編集",edit_post_path(post.id),class: "btn btn-outline-light ml-5" %>
		<%= link_to "削除する",post_path(post.id),method: :delete,"data-confirm" => "タイトル『#{post.title}』の投稿を削除しますか？",class: "btn btn-outline-danger" %>
	<% end %>
</div>