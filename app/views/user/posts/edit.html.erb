<div class="post-index">
	<h1>投稿編集画面</h1>
	<%= form_with model:@post,url:post_path,method: :patch,local: true do |f| %>
	  <%= video_tag @post.video.url, width: "100%", loop: true,autoplay: true,muted: true unless @post.video.blank? %><br>
	  <%= f.file_field :video,accept: "video/*" %><br>
	  <%= f.label :title,"タイトル" %><br>
	  <%= f.text_field :title %><br>
	  <%= f.label :body,"説明文" %><br>
	  <%= f.text_area :body %><br>
	  <%= f.submit "編集を保存" %>
	<% end %>
</div>