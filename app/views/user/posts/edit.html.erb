<div class="row">
	<h1 class="col-lg-8 mx-auto mt-5 mb-4">投稿編集画面</h1>
	<div class="col-lg-8 mx-auto">
		<%= form_with model:@post,url:post_path,method: :patch,local: true do |f| %>
			<%= video_tag @post.video.url, width: "100%", loop: true,controls: true,muted: true,poster: attachment_url(@post, :image, format: "jpg") unless @post.video.blank? %>
			<%= f.file_field :video,accept: "video/*"%><br>
			<%= f.label :image,"サムネイルにする画像を選択",id: "image-preview",class: "mt-4 mx-auto" %><br>
		  	<%= f.attachment_field :image %>
			<div class="form-group row">
				<div class="col-lg-7 mx-auto">
					<%= f.label :title,"タイトル" %>
					<%= f.text_field :title,class: "form-control w-100" %>
					<%= f.label :body,"説明文" %>
					<%= f.text_area :body,class: "form-control w-100" %>
					<%= f.submit "編集を保存",class: "btn btn-outline-success mt-3 w-100" %>
					<%= link_to "削除する",post_path(@post.id),method: :delete,"data-confirm" => "この投稿を削除しますか？",class: "btn btn-outline-danger mt-3 w-100" %>
				</div>
			</div>
		<% end %>
	</div>
</div>