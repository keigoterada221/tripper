<h1>新規投稿</h1>

<%= form_with model:@post,url:posts_path,method: :post, local: true do |f| %>
  <%= f.label :name,"投稿画像" %><br />
  <%= attachment_image_tag @post, :image, :fill, 300, 300, format: "jpeg", fallback: "no_post_image.jpg",size:300,class: "image" %><br>
  <%= f.file_field :video,accept: "video/*" %><br>

  <%= f.label :title,"タイトル" %><br>
  <%= f.text_field :title %><br>
  <%= f.label :body,"説明文" %><br>
  <%= f.text_area :body %><br>
  <%= f.submit "投稿する" %>
<% end %>