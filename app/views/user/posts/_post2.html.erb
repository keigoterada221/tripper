<div class="row">
    <% posts.each do |post| %>
        <!-- 三列で表示 + プロフィール画像なし -->
        <div class="col-lg-4 mb-5">
            <!-- 投稿動画表示 -->
            <%= video_tag post.video.url, class: "rounded", width: "100%",loop: true,muted: true,controls: true,poster: attachment_url(post, :image, :fill, 500, 500, format: "jpg") unless post.video.blank? %><br>
            <%= link_to post_path(post.id) do %>
                <h4><%= post.title %></h4>
            <% end %>
            <div class="favorite_comment">
                <!-- コメント数 -->
                <span class="comment-count float-right">
                    <%= render "user/comments/count",post: post %><br>
                </span>
                <!-- お気に入り機能 -->
                <span id="favorite-<%= post.id %>" class="float-right">
                    <%= render "user/favorites/favorite",post: post %>
                </span>
            </div>
            <% if user_signed_in?||admin_signed_in? %>
                <% if post.user_id == current_user.id%>
                  <%= link_to "投稿を編集",edit_post_path(post.id),class: "btn btn-outline-light btn-sm" %>
                  <%= link_to "削除",post_path(post.id),method: :delete,class: "btn btn-outline-danger btn-sm" %>
                <% end %>
            <% else %>
                <div class="float-right">
                    <i class="fas fa-star fa-2x" aria-hidden="true" style="color: #ffff33;"></i>
                    <%= post.favorites.count %>
                </div>
            <% end %>
        </div>
    <% end %>
</div>