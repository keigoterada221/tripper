<div class="row">
	<% if @notifications.exists? %>
		<h1 class="col-lg-12 mt-5 mb-5 text-center">通知</h1>
		<div id="notification" class="col-lg-12 mx-auto"><%= render @notifications %></div>
		<div class="more col-lg-7 mx-auto">
			<%= link_to_next_page @notifications, 'さらに読み込む', remote: true, id: 'view_more',class: "btn btn-outline-light w-100 mt-3 mb-3" %>
		</div>
	<% else %>
		<h1 class="col-lg-12 mt-5 mb-5 text-center">通知</h1>
		<p class="col-lg-12 mt-5 mb-5 text-center"><%= "通知はありません" %></p>
	<% end %>
</div>